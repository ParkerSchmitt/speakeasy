{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "strictNullChecks": true,
        "alwaysStrict": true,
        "strict": true,
        "jsx": "react",
  

        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "webpack.config.js",
        "./eslintrc.json",
        "src/index.tsx"
    ],
    "exclude": [
        "src/**/*.spec.ts",
        "src/**/*.test.ts",
        "utils/*.ts"
    ],
    "jest": {
        "moduleFileExtensions": [
          "js",
          "jsx",
          "tsx",
          "ts"
        ],
        "testPathIgnorePatterns": ["signoz"]
      },

      "ts-node": {
        "esm": true
    },
    "strictNullChecks": true

}